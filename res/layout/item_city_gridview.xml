<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <!--内容框-->
    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_bg_city_grid">
        <!--文字内容-->
        <LinearLayout
            android:id="@+id/info_frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/aqi_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="轻度污染"
                android:textColor="@color/yellow_green"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/aqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="6dp"
                android:text="AQI: 14"
                android:textColor="@color/white"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/pm25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="6dp"
                android:text="PM2.5: 19"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>
        <!--添加按钮-->
        <ImageView
            android:id="@+id/add_frame"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/btn_add_grid_item"/>
    </RelativeLayout>
    <!--城市名字-->
    <TextView
        android:id="@+id/city_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/bg"
        android:layout_centerHorizontal="true"
        android:text="南京"
        android:textColor="@color/white"
        android:textSize="18sp"/>
    <!--删除按钮-->
    <Button
        android:id="@+id/delete_city_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/btn_city_mgr_delete"/>
</RelativeLayout>