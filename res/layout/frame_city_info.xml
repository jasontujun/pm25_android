<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/edu.nju.pm25.in"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/dark_black">
    <!--背景-->
    <ImageSwitcher
        android:id="@+id/bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <!--顶栏-->
    <RelativeLayout
        android:id="@+id/top_bar_frame"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_menu">
        <ImageButton
            android:id="@+id/add_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_manage_city"
            android:background="@drawable/btn_bg"/>
        <TextView
            android:id="@+id/city_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="南京"
            android:textColor="@color/gray"
            android:textSize="20sp"/>
        <ImageButton
            android:id="@+id/refresh_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/btn_update"
            android:background="@drawable/btn_bg"/>
    </RelativeLayout>
    <!--城市容器-->
    <edu.nju.pm25.in.ui.controls.viewflow.ViewFlow
        android:id="@+id/city_viewflow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/top_bar_frame"/>
    <!--页码-->
    <edu.nju.pm25.in.ui.controls.viewflow.CircleFlowIndicator
        android:id="@+id/city_indic"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dip"
        app:inactiveType="fill"/>
    <!--空提示-->
    <TextView
        android:id="@+id/nothing_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/add_btn"
        android:layout_marginLeft="6dp"
        android:layout_centerInParent="true"
        android:text="还没有关注的城市哦~"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone"/>

</RelativeLayout>